---
galaxy_info:
  description: "{{ role_description | replace("\"", "'") }}"

  # Platforms is a list of platforms, and each platform has a name and a list of versions.
  platforms:
    - name: "ArchLinux"
      versions:
        - "all"

# List your role dependencies here, one per line. Be sure to remove the '[]' above,
# if you add dependencies to this list.
{% if 'dconf' in role_blocks or role_use_aur is defined and role_use_aur is true -%}
dependencies:
  {% if 'dconf' in role_blocks -%}
  - role: "arcfg.internal.python_psutil"
  {% endif -%}
  {% if role_use_aur is defined and role_use_aur is true -%}
  - role: "arcfg.internal.aur_builder"
  {% endif -%}
{% else -%}
dependencies: []
{% endif -%}
